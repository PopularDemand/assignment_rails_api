<h1>Smelly Potatoes Reviews</h1>

<h2>Create a Review</h2>

<%= form_for Review.new, remote: true do |f| %>
    Reviewer: <%= f.text_field :reviewer_name %>
    <br>
    Title: <%= f.text_field :title %>
    <br>
    Text: <%= f.text_field :review_text %>
    <br>
    Movie: <%= f.collection_select :movie_id,
                Movie.all, :id, :title %>
    <br>
    <%= f.submit %>
<% end %>

<table id='all-reviews'>
  <thead>
    <tr>
      <th>Movie Reviewed</th>
      <th>Reviewer</th>
      <th>Title</th>
      <th>Review Text</th>
      <th>Review Date</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody id='reviews-list'>
    <%= render @reviews, partial: 'review' %>
  </tbody>
</table>